{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ankichess",
  "version": "0.1.0",
  "identifier": "com.daniele.ankichess",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/ankichess/browser"
  },
  "app": {
    "windows": [
      {
        "title": "ankichess",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "resources/**/*",
      "../src/assets/sounds/*"
    ],
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
